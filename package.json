{
  "name": "pod-ip",
  "version": "0.1.7",
  "description": "Get the IP address of a Pod in Kubernetes",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=12.22.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint -c ./.eslintrc.js \"./**/*.{js,ts}\"",
    "test": "npm run build && jest",
    "ci": "npm run build && npm run lint && jest",
    "watch": "tsc -w -p tsconfig.json",
    "clean": "rimraf lib .tsbuildinfo coverage doc build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RABC-Group/pod-ip.git"
  },
  "keywords": [
    "ip",
    "kubernetes",
    "docker",
    "pod",
    "container"
  ],
  "author": "RABC Group <it@rabc.sg>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RABC-Group/pod-ip/issues"
  },
  "homepage": "https://github.com/RABC-Group/pod-ip#readme",
  "dependencies": {
    "execa": "^5.1.1",
    "internal-ip": "6"
  },
  "devDependencies": {
    "@types/default-gateway": "^3.0.1",
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "lib"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "node_modules/execa/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!execa/.*)"
    ]
  }
}

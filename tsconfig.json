{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "removeComments": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "outDir": "build",
    "importHelpers": true,
    "inlineSourceMap": true,
    "pretty": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "*.js",
    ".*.js",
  ],
  "exclude": [
    "**/*/node_modules/**/*",
  ]
}
